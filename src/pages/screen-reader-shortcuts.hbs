{{#> base title="Screen Reader Shortcuts" }}
{{#*inline "content"}}

<div class="col-lg-8">
    <h2>Voice Over</h2>
    <p>
        Voice Over Key (VO) = CTRL + OPTION
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Command</th>
                <th scope="col">Task</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>CMD + F5</td>
                <td>Start / Turn Off</td>
            </tr>
            <tr>
                <td>CTRL</td>
                <td>Stop Reading</td>
            </tr>
            <tr>
                <td>VO + SHIFT + UP / DOWN</td>
                <td>Birds View Up / Drill Down</td>
            </tr>
            <tr>
                <td>VO + LEFT / RIGHT</td>
                <td>Navigate Items on Current Level</td>
            </tr>
            <tr>
                <td>VO + UP / DOWN</td>
                <td>Navigate Table Column</td>
            </tr>
            <tr>
                <td>VO + Z</td>
                <td>Read Last Spoken Phrase</td>
            </tr>
            <tr>
                <td>VO + A</td>
                <td>Read From Here</td>
            </tr>
            <tr>
                <td>VO + B</td>
                <td>Read From Top to Here</td>
            </tr>
            <tr>
                <td>VO + P</td>
                <td>Read Paragraph</td>
            </tr>
            <tr>
                <td>VO + S</td>
                <td>Read Sentence</td>
            </tr>
            <tr>
                <td>VO + W</td>
                <td>Read Word</td>
            </tr>
            <tr>
                <td>VO + CMD + H (SHIFT reverse)</td>
                <td>Cycle Headers</td>
            </tr>
            <tr>
                <td>VO + CMD + L (SHIFT reverse)</td>
                <td>Cycle Links</td>
            </tr>
            <tr>
                <td>VO + CMD + T (SHIFT reverse)</td>
                <td>Cycle Tables</td>
            </tr>
            <tr>
                <td>VO + CMD + J (SHIFT reverse)</td>
                <td>Cycle Form Controls</td>
            </tr>
            <tr>
                <td>VO + CMD + X (SHIFT reverse)</td>
                <td>Cycle Lists</td>
            </tr>
            <tr>
                <td>VO + SHIFT + I</td>
                <td>Read Info About Page</td>
            </tr>
            <tr>
                <td>VO + U (Close with ESC)</td>
                <td>Roter</td>
            </tr>
        </tbody>
    </table>

    <h2>NVDA</h2>
    <p>
        NVDA Key = INSERT
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Command</th>
                <th scope="col">Task</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>As a normal Windows application / NVDA + Q</td>
                <td>Start / Turn Off</td>
            </tr>
            <tr>
                <td>CTRL</td>
                <td>Stop Reading</td>
            </tr>
            <tr>
                <td>UP / DOWN</td>
                <td>Navigate Items</td>
            </tr>
            <tr>
                <td>NVDA + UP</td>
                <td>Read Current Line</td>
            </tr>
            <tr>
                <td>CTRL + UP / DOWN</td>
                <td>Read Prev / Next Paragraph</td>
            </tr>
            <tr>
                <td>NVDA + DOWN</td>
                <td>Read From Here</td>
            </tr>
            <tr>
                <td>NVDA + T</td>
                <td>Read Title</td>
            </tr>
            <tr>
                <td>1-6</td>
                <td>Header 1-6</td>
            </tr>
            <tr>
                <td>H (SHIFT reverse)</td>
                <td>Cycle Headers</td>
            </tr>
            <tr>
                <td>K (SHIFT reverse)</td>
                <td>Cycle Links</td>
            </tr>
            <tr>
                <td>U (SHIFT reverse)</td>
                <td>Cycle Unvisited Links</td>
            </tr>
            <tr>
                <td>V (SHIFT reverse)</td>
                <td>Cycle Visited Links</td>
            </tr>
            <tr>
                <td>L (SHIFT reverse)</td>
                <td>Cycle Lists</td>
            </tr>
            <tr>
                <td>NVDA + F7 (Close with ESC)</td>
                <td>Element List</td>
            </tr>
        </tbody>
    </table>
</div>

{{/inline}}
{{/base}}