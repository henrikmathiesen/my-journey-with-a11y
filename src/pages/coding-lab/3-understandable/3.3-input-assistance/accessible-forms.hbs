{{#> base title="3.3 Input Assistance - Accessible Forms" homeref="../../../" }}
    {{#*inline "content"}}

        <div class="col-lg-8">

            <h2>3.3 Input Assistance - Accessible Forms</h2>

            <form novalidate>

                <div class="form-row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="firstName">First Name (required)</label>
                            <input type="text" name="firstName" id="firstName" class="form-control" required>
                            <p class="invalid-feedback" id="firstName-validation-message">First Name is required</p>
                        </div>

                        <div class="form-group">
                            <label for="lastName">Last Name (required)</label>
                            <input type="text" name="lastName" id="lastName" class="form-control" required>
                            <p class="invalid-feedback" id="lastName-validation-message">Last Name is required</p>
                        </div>

                        <div class="form-group">
                            <label for="dateOfBirth">Date of birth (required, yyyy-mm-dd)</label>
                            <input type="text" name="dateOfBirth" id="dateOfBirth" class="form-control" required data-required-format-date>
                            <p class="invalid-feedback" id="dateOfBirth-validation-message">Date of birth is required (yyyy-mm-dd)</p>
                        </div>

                        <div class="form-group">
                            <label for="city">City (required)</label>
                            <select name="city" id="city" class="form-control" required>
                                <option value="">Select One</option>
                                <option value="Adamsburg">Adamsburg</option>
                                <option value="Bertilsburg">Bertilsburg</option>
                                <option value="Ceasarsburg">Ceasarsburg</option>
                            </select>
                            <p class="invalid-feedback" id="city-validation-message">City is required</p>
                        </div>

                        <div class="form-group">
                            <label for="favoriteFood">Favorite Food</label>
                            <input type="text" name="favoriteFood" id="favoriteFood" class="form-control">
                        </div>

                        <div>
                            <button id="submitButton" class="btn btn-primary btn-block">Submit</button>
                        </div>
                    </div>
                </div>

            </form>

        </div>

        <script>

            const $requiredInputs = document.querySelectorAll('[required]');
            const $requiredFormatDates = document.querySelectorAll('[data-required-format-date]');

            document.getElementById('submitButton').addEventListener('click', validate);

            function validate(e) {
                e.preventDefault();

                $requiredInputs.forEach((fc) => {

                    if (fc.value === '') {
                        setInvalid(fc);
                    } else {
                        setValid(fc);
                    }

                });

                $requiredFormatDates.forEach((fc) => {

                    const pattern = /^\d{4}-(0[1-9]|1[0-2])-(0[1-9]|1[0-9]|2[0-9]|3[0-1])$/;

                    if (fc.value.match(pattern) == null) {
                        setInvalid(fc);
                    } else {
                        if (isCorrectDate(fc.value) == false) {
                            setInvalid(fc);
                        } else {
                            setValid(fc);
                        }
                    }

                })
            }

            function isCorrectDate(value) {
                const noDashes = value.replace(/-/g, '');

                const yearPart = noDashes.slice(0, 4);
                const monthPart = noDashes.slice(4, 6);
                const dayPart = noDashes.slice(6, 8);

                const dateObj = new Date(`${yearPart}-${monthPart}-${dayPart}`);

                return dateObj.getFullYear() === +yearPart &&
                    (dateObj.getMonth() + 1) === +monthPart &&
                    dateObj.getDate() === +dayPart;
            }

            function setInvalid(fc) {
                fc.classList.add('is-invalid');
                fc.setAttribute('aria-invalid', 'true')
                fc.setAttribute('aria-describedBy', fc.getAttribute('id') + '-validation-message');
            }

            function setValid(fc) {
                fc.classList.remove('is-invalid');
                fc.removeAttribute('aria-invalid');
                fc.removeAttribute('aria-describedBy');
            }

        </script>

    {{/inline}}
    {{/base}}
