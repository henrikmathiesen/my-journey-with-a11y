                See wcag-etc for programmatically setting focus with tabindex=-1
        -->

        <script>
            // https://stackoverflow.com/questions/41142932/ie-supports-foreach-when-invoked-fromthe-console-but-not-when-called-from-t
            if (!Object.getOwnPropertyDescriptor(NodeList.prototype, 'forEach')) {
                Object.defineProperty(NodeList.prototype, 'forEach', Object.getOwnPropertyDescriptor(Array.prototype, 'forEach'));
            }

            const skipContentContainer = document.getElementById('skip-to-content-container');
            const skipLinks = skipContentContainer.querySelectorAll('a');

            skipLinks.forEach(function (a) { a.addEventListener('focus', skipLinkFocus) });
            skipLinks.forEach(function (a) { a.addEventListener('blur', skipLinkBlur) });

            function skipLinkFocus(ev) {
                skipContentContainer.classList.remove('sr-only');
                ev.target.classList.remove('sr-only');
            }

            function skipLinkBlur() {
                skipContentContainer.classList.add('sr-only');
                skipLinks.forEach(function (a) { a.classList.add('sr-only') });
            }

        </script>

